{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],
    "strict": true,
    "composite": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@nocra/colors": ["packages/colors/source"],
      "@nocra/config": ["packages/config/source"],
      "@nocra/core": ["packages/core/source"],
      "@nocra/errors": ["packages/errors/source"],
      "@nocra/hooks": ["packages/hooks/source"],
      "@nocra/logger": ["packages/logger/source"],
      "@nocra/middleware": ["packages/middleware/source"],
      "@nocra/parser": ["packages/parser/source"],
      "@nocra/prompts": ["packages/prompts/source"],
      "@nocra/theme": ["packages/theme/source"],
      "@nocra/types": ["packages/types/source"],
      "@nocra/utils": ["packages/utils/source"]
    }
  },
  "exclude": ["node_modules", "build"]
}
